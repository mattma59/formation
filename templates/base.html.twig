<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}" />
        <script src="{{ asset('jquery/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('popper/popper.js') }}"></script>
        <script src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/hinclude.js') }}"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <main class="container-fluid">
            <ul class="nav justify-content-end">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Default</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('app_default_index') }}">Index</a>
                        <a class="dropdown-item" href="{{ path('app_default_autowiring') }}">Autowiring</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Route</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('app_route_index', {name: "merci"}) }}">Index</a>
                        <a class="dropdown-item" href="{{ path('app_route_number', {number: 35}) }}">Number</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Controller</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('ctrl_index') }}">Index</a>
                        <a class="dropdown-item" href="{{ path('ctrl_response') }}" target="_blank">Response</a>
                        <a class="dropdown-item" href="{{ path('ctrl_session') }}">Session</a>
                        <a class="dropdown-item" href="{{ path('ctrl_json') }}" target="_blank">Json</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Form</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('form_index') }}">Index</a>
                        <a class="dropdown-item" href="{{ path('form_userform') }}">Ajout Utilisateur</a>
                        <a class="dropdown-item" href="{{ path('form_bootstrap') }}">Ajout Utilisateur Bootstrap</a>
                        <a class="dropdown-item" href="{{ path('form_listusers') }}">Liste Utilisateurs</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('template_index') }}">Template</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('i18n_index') }}">i18n</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">SÃ©cure</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('securearea_index') }}">Index</a>
                        <a class="dropdown-item" href="{{ path('securearea_annotation') }}">Annotation</a>
                        <a class="dropdown-item" href="{{ path('securearea_twig') }}">Twig</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Admin</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('auth_index') }}">Index</a>
                        {% if app.user %}
                            <a class="dropdown-item" href="{{ path('auth_logout') }}">Log Out {{ app.user.username|capitalize }}</a>
                        {% else %}
                            <a class="dropdown-item" href="{{ path('auth_login') }}">Log In</a>
                        {% endif %}
                    </div>
                </li>
            </ul>
            <header class="mt-3">
                <h2>Formation Symfony</h2>
                <hr />
            </header>
            <section>
                {# Commentaire #}
                {% block body %}{% endblock %}
            </section>
            <footer>
                <hr />
                <p class="text-center small">Formation Mai 2018</p>
            </footer>
        </main>
    </body>
</html>
